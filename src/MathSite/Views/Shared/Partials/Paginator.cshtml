@model PaginatorViewModel

@if (Model.PagesCount > 1)
{
    <nav>
        <ul class="pagination-digg">
            @if (Model.CurrentPage > 1)
            {
                <li class="previous">
                    <a href="@Url.Action("Index", "News", new {page = Model.CurrentPage - 1})" aria-label="Назад">
                        <span aria-hidden="true">&laquo; Назад</span>
                    </a>
                </li>
            }
            else
            {
                <li class="previous-off">&laquo; Назад</li>
            }

            @for (var i = 0; i < Model.PagesCount; i++)
            {
                var pageNumber = i + 1;

                if (Model.CurrentPage == pageNumber)
                {
                    <li class="active">
                        @pageNumber
                    </li>
                }
                else
                {
                    <li>
                        <a href="@Url.Action("Index", "News", new {page = pageNumber})">@pageNumber</a>
                    </li>
                }
            }

            @if (Model.PagesCount > Model.CurrentPage)
            {
                <li>
                    <a href="@Url.Action("Index", "News", new {page = Model.CurrentPage + 1})"
                       aria-label="Вперед">
                        <span aria-hidden="true">Вперед&raquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li class="previous-off">Вперед&raquo;</li>
            }
        </ul>
    </nav>
}