@model IEnumerable<PostPreviewViewModel>

<ul class="features__list">
    @{ var i = 0; }
    @foreach (var item in Model)
    {
        var className = "";

        switch (i)
        {
            case 0:
                className = "teaser_palette_blue";
                break;
            case 1:
                className = "teaser_palette_purple";
                break;
            case 2:
                className = "teaser_palette_orange";
                break;
        }

        <li class="features__item @className">
            @Html.Partial("Partials/Posts/PostPreview", item)
        </li>
        i = (i + 1) % 3;
    }
</ul>