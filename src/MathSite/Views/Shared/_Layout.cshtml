@using System.Reflection
@{
    var userExists = ViewBag.User != null;
    User user = null;
    if (userExists)
    {
        user = (User) ViewBag.User;
    }

    var version = typeof(Startup).Assembly.GetCustomAttribute<AssemblyInformationalVersionAttribute>().InformationalVersion;
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>@ViewData["Title"] - MathSite</title>
        
        <meta name="site-version" content="@version" />

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    </head>
    <body>
        <div class="container">
            @RenderBody()
        </div>
    </body>
</html>