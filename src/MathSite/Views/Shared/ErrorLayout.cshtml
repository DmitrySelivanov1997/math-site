@using System.Reflection
@{
    var imageUrl = Url.Content("~/img/404bg.jpg");
    var bgColor = ViewData["BackgroundColor"];
}

@{
    var version = typeof(Startup).Assembly.GetCustomAttribute<AssemblyFileVersionAttribute>().Version;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">

        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <meta name="description" content="@ViewData["Description"]">
        <meta name="title" content="@ViewData["Title"]">
        <meta name="author" content="mokeev1995">
        
        <meta name="site-version" content="@version" />
        
        <title>@ViewData["Title"]</title>

        <style>
            * {
                -moz-box-sizing: border-box;
                box-sizing: border-box;
                margin: 0;
                padding: 0;
            }

            body {
                -moz-user-select: none;
                -ms-user-select: none;
                -webkit-user-select: none;
                background: #00052a url("@imageUrl") no-repeat center center fixed;
                background-size: cover;
                cursor: default;
                display: block;
                font-family: 'Roboto', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
                font-weight: 300;
                height: 100%;
                min-height: 400px;
                min-width: 730px;
                position: relative;
                user-select: none;
                width: 100%;
            }

            .cover {
                background: @bgColor;
                height: 100%;
                position: fixed;
                width: 100%;
            }

            header {
                -moz-transition: 200ms;
                -ms-transition: 200ms;
                -o-transition: 200ms;
                -webkit-transition: 200ms;
                background: rgba(255, 255, 255, 0.15);
                display: block;
                height: 50px;
                position: fixed;
                top: 0;
                transition: 200ms;
                width: 100%;
            }

            header menu {
                display: block;
                margin: 0 auto;
                min-width: 730px;
                position: relative;
                width: 80%;
            }

            header ul { float: right; }

            header ul li { display: inline-block; }

            header ul li a {
                -moz-transition: 250ms;
                -ms-transition: 250ms;
                -o-transition: 250ms;
                -webkit-transition: 250ms;
                color: #fff;
                display: block;
                height: 50px;
                line-height: 50px;
                min-width: 115px;
                padding: 0 10px;
                position: relative;
                text-align: center;
                text-decoration: none;
                transition: 250ms;
            }

            header ul li a:hover { background: rgba(255, 255, 255, 0.1); }

            #content {
                color: #fff;
                display: block;
                height: 250px;
                left: 50%;
                margin: -125px auto 0 -50%;
                position: fixed;
                text-align: center;
                text-transform: uppercase;
                top: 50%;
                width: 100%;
            }

            #content h1 {
                font-size: 35px;
                font-weight: 300;
            }

            #content article {
                font-size: 65px;
                font-weight: 500;
                line-height: 120px;
                padding-top: 10px;
            }

            .btn {
                background: rgba(0, 0, 0, 0.4);
                border: solid 1px rgba(0, 0, 0, 0.4);
                border-radius: 4px;
                color: #fff;
                display: inline-block;
                margin: 0 10px;
                min-width: 175px;
                padding: 10px 20px;
                text-align: center;
                text-decoration: none;
                transition: 250ms;
            }

            .btn:hover {
                background: rgba(0, 0, 0, 0.7);
                border-color: rgba(0, 0, 0, 0.7);
                text-decoration: none;
            }

            nav { padding-top: 20px; }

            .btn.home {
                background: rgba(12, 163, 0, 0.6);
                border-color: rgba(66, 133, 44, 0.6);
            }

            .btn.home:hover {
                background: rgba(12, 163, 0, 1);
                border-color: rgba(66, 133, 44, 0.9);
            }
        </style>
    </head>
    <body>
        <div class="cover"></div>
        <header>
            <menu>
                <ul>
                    <li>
                        <a href="@Url.RouteUrl("Pages", new {query = "for-entrants"})">Абитуриентам</a>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl("Pages", new {query = "for-students"})">Студентам</a>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl("Pages", new {query = "for-scholars"})">Школам</a>
                    </li>
                    <li>
                        <a href="@Url.RouteUrl("Pages", new {query = "contacts"})">Контакты</a>
                    </li>
                </ul>
            </menu>
        </header>

        @RenderBody()
    </body>
</html>